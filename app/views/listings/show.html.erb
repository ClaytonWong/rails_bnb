<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<h2>Book</h2>
<p>
  <%= format_cents_for_country @listing.night_fee_cents, @listing.country %> per night
</p>

<% if ((user_signed_in?) && (@listing.host_id != current_user.id)) %>
  <%= link_to 'Book', new_booking_path(listing_id: @listing.id), class: 'wide btn btn-warning' %>
  <%= link_to 'Message me', new_conversation_path(guest_id: current_user.id, listing_id: @listing.id), class: 'wide btn btn-success' %>
<% end %>
<p>
  <strong>Street address:</strong>
  <%= @listing.street_address %>
</p>

<p>
  <strong>City:</strong>
  <%= @listing.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @listing.country.name %>
</p>

<p>
  <strong>Coords</strong>
  <%= @listing.latitude %>, <%= @listing.longitude %> 
</p>

<p>
  <strong>Bed count:</strong>
  <%= @listing.bed_count %>
</p>

<p>
  <strong>Bedroom count:</strong>
  <%= @listing.bedroom_count %>
</p>

<p>
  <strong>Bathroom count:</strong>
  <%= @listing.bathroom_count %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Night fee:</strong>
  <%= Money.new(@listing.night_fee_cents.to_s, :aud).format(:with_currency => true) %>
  <%#= format_cents_for_country @listing.night_fee_cents, @listing.country %>
</p>

<p>
  <strong>Cleaning fee:</strong>
  <%= Money.new(@listing.cleaning_fee_cents.to_s, :aud).format(:with_currency => true) %>
  <%#= format_cents_for_country @listing.cleaning_fee_cents, @listing.country %>
</p>

<% if ((user_signed_in?) && (@listing.host_id == current_user.id)) %>
  <%= link_to 'Edit', edit_listing_path(@listing) %>
  <%= link_to 'Destroy', @listing, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back to listings', listings_path %>
